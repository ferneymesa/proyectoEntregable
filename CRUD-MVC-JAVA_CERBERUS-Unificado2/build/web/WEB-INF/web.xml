    <servlet>
        <servlet-name>ControladorRelaciones</servlet-name>
        <servlet-class>Controlador.ControladorRelaciones</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorExternos</servlet-name>
        <servlet-class>Controlador.ControladorExternos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControladorImg</servlet-name>
        <servlet-class>Controlador.ControladorImg</servlet-class>
