        <url-pattern>/ControladorExternos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControladorImg</servlet-name>
        <url-pattern>/ControladorImg</url-pattern>
    </servlet-mapping>
